@section HeaderMetrics {
    <div class="header-metrics">
        <div class="metric-card">
            <div class="metric-value">12</div>
            <div class="metric-label">Upcoming Events</div>
        </div>
        <div class="metric-card">
            <div class="metric-value">45</div>
            <div class="metric-label">Completed Events</div>
        </div>
        <div class="metric-card">
            <div class="metric-value">234</div>
            <div class="metric-label">Total Donors</div>
        </div>
        <div class="metric-card">
            <div class="metric-value">156</div>
            <div class="metric-label">Total Volunteers</div>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="metric-card">
                <div class="metric-value">8</div>
                <div class="metric-label">Pending Requests</div>
            </div>
        }
    </div>
}

<div class="row">

    <div class="col-lg-6 mb-4">
        <div class="content-card h-100">
            <h2 class="mb-4">Welcome to Serving Hearts Network</h2>

            <div class="row">
                <div class="col-md-8">
                    <h5 class="mb-3">Quick Stats</h5>
                    <p class="text-muted">Dashboard Overview</p>

                    <div class="mt-4">
                        <h6>Recent Activity</h6>

                    </div>
                </div>

                <div class="col-md-4">
                    <h5 class="mb-3">Quick Actions</h5>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" hx-get="/Event/EventList" hx-target="#content-container">
                            <i class="bi bi-calendar-plus me-2"></i>Browse Events
                        </button>
                        <button class="btn btn-outline-primary" hx-get="/Donation/Donate" hx-target="#content-container">
                            <i class="bi bi-gift me-2"></i>Make a Donation
                        </button>
                        <button class="btn btn-outline-primary" hx-get="/Event/SignedUpEvents" hx-target="#content-container">
                            <i class="bi bi-check-circle me-2"></i>My Events
                        </button>
                    </div>

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="mt-4">
                            <h6>Admin Actions</h6>
                            <div class="d-grid gap-2 mt-2">
                                <button class="btn btn-outline-secondary btn-sm" hx-get="/Event/CreateEvent" hx-target="#content-container">
                                    <i class="bi bi-plus-circle me-2"></i>Create Event
                                </button>
                                <button class="btn btn-outline-secondary btn-sm" hx-get="/Donation/DonationRequests" hx-target="#content-container">
                                    <i class="bi bi-inbox me-2"></i>Review Requests
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="content-card h-100">
            <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">

                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2"></button>
                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="3"></button>
                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="4"></button>
                    <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="5"></button>
                </div>

                <div class="carousel-inner">

                    <div class="carousel-item active" data-bs-interval="3000">
                        <img src="~/images/SavingHearts1.png" class="d-block w-100" alt="Serving Hearts screenshot 1">
                    </div>

                    <div class="carousel-item" data-bs-interval="3000">
                        <img src="~/images/SavingHearts2.jpg" class="d-block w-100" alt="Serving Hearts screenshot 2">
                    </div>

                    <div class="carousel-item" data-bs-interval="3000">
                        <img src="~/images/SavingHearts3.jpg" class="d-block w-100" alt="Serving Hearts screenshot 3">
                    </div>

                    <div class="carousel-item" data-bs-interval="3000">
                        <img src="~/images/SavingHearts4.png" class="d-block w-100" alt="Serving Hearts screenshot 4">
                    </div>

                    <div class="carousel-item" data-bs-interval="3F000">
                        <img src="~/images/SavingHearts5.jpg" class="d-block w-100" alt="Serving Hearts screenshot 5">
                    </div>

                    <div class="carousel-item" data-bs-interval="3000">
                        <img src="~/images/SavingHearts6.jpg" class="d-block w-100" alt="Serving Hearts screenshot 6">
                    </div>
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>

</div>

<div class="content-card mb-4">
    <h2 class="mb-3">About Us</h2>
    <p>
        Serving Hearts Network is a non-profit organization dedicated to making a difference in our community. We believe in the power of collective action to bring hope and support to those in need. Our initiatives are driven by compassion and a spirit-led desire to serve.
    </p>
    <p class="mb-0">
        From food and jacket drives for the homeless to visits at children's and old-age homes, our team of dedicated volunteers works tirelessly to share food, prayer, and conversation. We are a small team with big hearts, coordinating everything we do to make a direct impact on the streets and in our local homes.
    </p>
</div>
<style>

    #heroCarousel {
        overflow: hidden;
        border-radius: 8px;
    }

        #heroCarousel .carousel-inner {
            height: 450px;
        }

        #heroCarousel .carousel-item img {
            height: 100%;
            object-fit: cover;
        }


    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5a67d8 0%, #6a3d94 100%);
        }

    .btn-outline-primary {
        border-color: #667eea;
        color: #667eea;
    }

        .btn-outline-primary:hover {
            background-color: #667eea;
            border-color: #667eea;
            color: white;
        }
</style>