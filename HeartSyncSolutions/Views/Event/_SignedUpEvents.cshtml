<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">My Signed-Up Events</h1>
    <button class="btn btn-sm btn-outline-primary"
            hx-get="@Url.Action("Index", "Event")"
            hx-target="#main-content-area"
            hx-push-url="@Url.Action("Index", "Event")">
        Browse All Events
    </button>
</div>

<div class="card dashboard-card">
    <div class="card-body">
        <p class="text-muted">These are the events you've signed up for. Please remember to "Confirm Attendance" 48 hours before the event so we can finalize numbers.</p>
        
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Event</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><strong>Food Drive - City Bowl</strong></td>
                    <td>Sat, Nov 15 10:00 AM</td>
                    <td><span class="badge bg-warning text-dark">Interested</span></td>
                    <td>
                        <button class="btn btn-success btn-sm">Confirm</button>
                        <button class="btn btn-outline-danger btn-sm">Cancel</button>
                    </td>
                </tr>
                <tr>
                    <td><strong>Children's Outing - Aquarium</strong></td>
                    <td>Sat, Nov 29 9:00 AM</td>
                    <td><span class="badge bg-success">Confirmed</span></td>
                    <td>
                        <button class="btn btn-outline-danger btn-sm">Cancel</button>
                    </td>
                </tr>
                <tr>
                    <td><strong>Clothing Sort - Warehouse</strong></td>
                    <td>Tue, Dec 2 4:00 PM</td>
                    <td><span class="badge bg-secondary">Participated</span></td>
                    <td><span class="text-muted small">Thank you!</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>