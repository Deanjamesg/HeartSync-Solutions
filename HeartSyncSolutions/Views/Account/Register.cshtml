@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="content-card">
    <h2>Register</h2>
    <p class="text-muted mb-4">Create a new account to join our community.</p>

    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" placeholder="Enter your first name" required />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" placeholder="Enter your last name" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" placeholder="Enter your email address" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" placeholder="Enter your phone number (optional)" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Password</label>
                        <input type="password" class="form-control" placeholder="Enter a strong password" required minlength="8" />
                        <small class="text-muted">
                            Password must be at least 8 characters and contain uppercase, lowercase, number, and special character.
                        </small>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Confirm Password</label>
                        <input type="password" class="form-control" placeholder="Confirm your password" required />
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-person-plus me-2"></i>Register
                    </button>
                </div>

                <div class="text-center">
                    <p class="mb-0">
                        Already have an account? 
                        <a asp-controller="Account" asp-action="Login">Log in here</a>
                    </p>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card bg-light border-0">
                <div class="card-body">
                    <h6 class="card-title">Why Join Us?</h6>
                    <ul class="list-unstyled mt-3">
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Volunteer for community events
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Make meaningful donations
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Track your impact
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill text-success me-2"></i>
                            Connect with your community
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card bg-light border-0 mt-3">
                <div class="card-body">
                    <h6 class="card-title">Privacy & Security</h6>
                    <p class="small text-muted mb-0">
                        Your data is secure and we respect your privacy. We'll never share your information without your permission.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #5a67d8 0%, #6a3d94 100%);
    }

    .content-card a {
        color: #667eea;
        text-decoration: none;
    }

    .content-card a:hover {
        color: #5a67d8;
        text-decoration: underline;
    }
</style>
