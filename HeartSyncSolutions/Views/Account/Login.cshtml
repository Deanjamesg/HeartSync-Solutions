@{
    ViewData["Title"] = "Log in";
    Layout = "_Layout";
}

<div class="content-card">
    <div class="row">
        <div class="col-md-6">
            <h2>Log in</h2>
            <h5 class="mb-4">Use a local account to log in.</h5>

            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" placeholder="Enter your email" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" placeholder="Enter your password" required />
                </div>

                <div class="form-check mb-3">
                    <input type="checkbox" class="form-check-input" />
                    <label class="form-check-label">
                        Remember me?
                    </label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Log in</button>
                </div>

                <div class="text-start">
                    <p>
                        <a asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-controller="Account" asp-action="Register">Register as a new user</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

