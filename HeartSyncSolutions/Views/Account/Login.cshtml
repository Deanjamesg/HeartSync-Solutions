@model HeartSyncSolutions.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log In";
    Layout = "_Layout";
}

<div class="content-card">
    <div class="row">
        <div class="col-md-6">
            <h2>Log in</h2>
            <h5 class="mb-4">Use a local account to log in.</h5>

            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Log in</button>
                </div>

                <div class="text-start">
                    <p>
                        <a asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-controller="Account" asp-action="Register">Register as a new user</a>
                    </p>
                </div>
            </form>
        </div>
        
        <div class="col-md-6">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title">Welcome Back!</h5>
                    <p class="card-text">
                        Login to access your account and:
                    </p>
                    <ul>
                        <li>View your registered events</li>
                        <li>Track your donations</li>
                        <li>Manage your volunteer activities</li>
                        <li>Update your profile</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
