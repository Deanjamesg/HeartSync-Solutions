<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HeartSyncSolutions</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HeartSyncSolutions.styles.css" asp-append-version="true" />
</head>
<body class="dashboard-body">

    <nav class="sidebar">
        <div class="sidebar-header">
            <a href="#" class="sidebar-logo">Serving Hearts</a>
        </div>

        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a class="nav-link active"
                   hx-get="/Home/Index"
                   hx-trigger="click"
                   hx-target="#main-content-area"
                   hx-indicator="#loading-spinner">
                    <i class="bi bi-house-door"></i> Home
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link"
                   hx-get="/Event/EventListPartial"
                   hx-trigger="click"
                   hx-target="#main-content-area"
                   hx-indicator="#loading-spinner">
                    <i class="bi bi-calendar-event"></i> Events
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link"
                   hx-get="/Donation/DonationPartial"
                   hx-trigger="click"
                   hx-push-url="true"
                   hx-target="#main-content-area"
                   hx-indicator="#loading-spinner">
                    <i class="bi bi-heart"></i> Donations
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link"
                   hx-get="@Url.Action("Index", "User")"
                   hx-trigger="click"
                   hx-target="#main-content-area"
                   hx-indicator="#loading-spinner">
                    <i class="bi bi-person"></i> My Profile
                </a>
            </li>

            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
            {
                <li class="nav-divider"></li>
                <li class="nav-header">Admin</li>
                <li class="nav-item">
                    <a class="nav-link"
                       hx-get="@Url.Action("Index", "Admin")"
                       hx-target="#main-content-area"
                       hx-indicator="#loading-spinner">
                        <i class="bi bi-shield-lock"></i> Admin Dashboard
                    </a>
                </li>
            }
        </ul>
    </nav>

    <div class="main-wrapper">
        <main id="main-content-area" class="content-area">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/htmx.org@2.0.8/dist/htmx.min.js" integrity="sha384-/TgkGk7p307TH7EXJDuUlgG3Ce1UVolAOFopFekQkkXihi5u/6OCvVKyz1W+idaz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
