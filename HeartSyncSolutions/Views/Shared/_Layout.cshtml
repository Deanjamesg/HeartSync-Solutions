@inject Microsoft.AspNetCore.Identity.UserManager<HeartSyncSolutions.Models.User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Serving Hearts Network</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/HeartSyncSolutions.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="main-container">
        <div class="sidebar">
            <div class="nav-section-title">Volunteer</div>
            <nav class="nav-menu">
                <a href="#" hx-get="/Home/Index" hx-target="#content-container" hx-push-url="true" class="nav-item active" data-nav="home">
                    <i class="bi bi-house-door-fill"></i>
                    <span>Home</span>
                </a>
                <a href="#" hx-get="/Event/Events" hx-target="#content-container" hx-push-url="true" class="nav-item" data-nav="events">
                    <i class="bi bi-calendar-event"></i>
                    <span>Events</span>
                </a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="#" hx-get="/Donation/Donate" hx-target="#content-container" hx-push-url="true" class="nav-item" data-nav="donate">
                        <i class="bi bi-gift"></i>
                        <span>Donate</span>
                    </a>
                    <a href="#" hx-get="/User/AccountDetails" hx-target="#content-container" hx-push-url="true" class="nav-item" data-nav="account">
                        <i class="bi bi-person-circle"></i>
                        <span>Account</span>
                    </a>
                } else
                {
                    <a href="#" hx-get="/Account/Login" hx-target="#content-container" hx-push-url="true" class="nav-item" data-nav="login">
                        <i class="bi bi-box-arrow-in-right me-1"></i>
                        <span>Login</span>
                    </a>
                    <a href="#" hx-get="/Account/Register" hx-target="#content-container" hx-push-url="true" class="nav-item" data-nav="register">
                        <i class="bi bi-person-plus me-1"></i>
                        <span>Register</span>
                    </a>
                }


                @if (User.IsInRole("Admin"))
                {
                <div class="nav-section-title">Admin</div>
                <a href="#" hx-get="/Event/EventManager" hx-target="#content-container" hx-push-url="true" class="nav-item" data-nav="event-manager">
                    <i class="bi bi-gear-fill"></i>
                    <span>Event Manager</span>
                </a>
                <a href="#" hx-get="/Donation/DonationRequests" hx-target="#content-container" hx-push-url="true" class="nav-item" data-nav="donation-requests">
                    <i class="bi bi-box-seam"></i>
                    <span>In-Kind Requests</span>
                </a>
                <a href="#" hx-get="/Donation/DonationsList" hx-target="#content-container" hx-push-url="true" class="nav-item" data-nav="donation-list">
                    <i class="bi bi-inbox-fill"></i>
                    <span>View All Donations</span>
                </a>
                }
            </nav>
        </div>

        <div class="main-content">
            <div class="top-header">
                <div class="header-top">
                    <div class="h1">
                        <i class="bi bi-heart-fill"></i> Serving Hearts Network
                    </div>
                    <div class="header-icons">
                        <div class="header-icon">
                            <i class="bi bi-bell"></i>
                        </div>
                        <div class="header-icon">
                            <i class="bi bi-question-circle"></i>
                        </div>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var firstName = currentUser?.FirstName ?? "User";
                            
                            <div class="dropdown">
                                <div class="header-icon dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="cursor: pointer;">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><h6 class="dropdown-header">@firstName</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="#" hx-get="/User/AccountDetails" hx-target="#content-container">
                                            <i class="bi bi-person-circle me-2"></i>Account Settings
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="px-3 py-2">
                                            <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a href="/Account/Login" class="header-icon" title="Login">
                                <i class="bi bi-box-arrow-in-right"></i>
                            </a>
                        }
                    </div>
                </div>
                @RenderSection("HeaderMetrics", required: false)
            </div>

            <div class="content-area" id="content-container">
                @RenderBody()
            </div>
        </div>
    </div>
    <script>
        // Handle authentication redirects - User not Signed In
        document.body.addEventListener('htmx:beforeSwap', function(evt) {
            // Check if we're being redirected to login
            if (evt.detail.xhr.responseURL && evt.detail.xhr.responseURL.includes('/Account/Login')) {
                window.location.href = evt.detail.xhr.responseURL;
                evt.detail.shouldSwap = false;
                return;
            }

            // Check if response is a full HTML page instead of partial
            const responseText = evt.detail.xhr.responseText;
            if (responseText && responseText.trim().toLowerCase().startsWith('<!doctype')) {
                window.location.href = evt.detail.xhr.responseURL || window.location.href;
                evt.detail.shouldSwap = false;
                return;
            }
        });

        // Handle active nav state (click-based - simple and reliable)
        document.querySelectorAll('.nav-item').forEach(item => {
            item.addEventListener('click', function() {
                document.querySelectorAll('.nav-item').forEach(nav => nav.classList.remove('active'));
                this.classList.add('active');
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/htmx.org@2.0.8/dist/htmx.min.js" integrity="sha384-/TgkGk7p307TH7EXJDuUlgG3Ce1UVolAOFopFekQkkXihi5u/6OCvVKyz1W+idaz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
